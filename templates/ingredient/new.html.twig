{% extends 'base.html.twig' %}

{% block title %}Créer un ingrédient{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Créer un ingrédient</h1>

    {# Rend le formulaire complet, incluant les balises <form> d'ouverture et de fermeture #}
    {{ form_start(form) }}

        {# Affiche les messages d'erreur globaux du formulaire #}
        {% if form_errors(form) %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="form-group">
            {{ form_label(form.name) }}
            {{ form_widget(form.name) }}
            {# Affiche les erreurs spécifiques au champ 'name' #}
            <div class="form-error">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="form-group">
            {{ form_label(form.price) }}
            {{ form_widget(form.price) }}
            {# Affiche les erreurs spécifiques au champ 'price' #}
            <div class="form-error">
                {{ form_errors(form.price) }}
            </div>
        </div>

        {{ form_row(form.submit) }} {# Affiche le bouton de soumission #}

    {{ form_end(form) }}
</div>
{% endblock %}